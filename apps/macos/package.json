{
  "name": "@fluentui-react-native/tester-macos",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "fluentui-scripts build",
    "bundle": "react-native rnx-bundle --dev false",
    "just": "fluentui-scripts",
    "clean": "fluentui-scripts clean",
    "code-style": "fluentui-scripts code-style",
    "depcheck": "fluentui-scripts depcheck",
    "lint": "fluentui-scripts eslint",
    "start": "react-native start",
    "test": "fluentui-scripts jest",
    "macos": "react-native run-macos --scheme FluentTester --project-path src",
    "prettier": "fluentui-scripts prettier",
    "prettier-fix": "fluentui-scripts prettier --fix true"
  },
  "dependencies": {
    "@fluentui-react-native/tester": "^0.47.3",
    "react": "17.0.1",
    "react-native": "^0.64.3",
    "react-native-macos": "^0.64.6",
    "react-native-svg": "^12.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/runtime": "^7.8.0",
    "@fluentui-react-native/eslint-config-rules": "^0.1.1",
    "@rnx-kit/cli": "^0.5.27",
    "@rnx-kit/metro-config": "^1.2.3",
    "@uifabricshared/build-native": "^0.1.1",
    "metro-config": "^0.66.2",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-native-svg-transformer": "^0.14.3",
    "react-native-test-app": "^0.7.0",
    "react-test-renderer": "~16.13.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "rnx-kit": {
    "reactNativeVersion": "0.64",
    "kitType": "app",
    "detectCyclicDependencies": {
      "throwOnError": true
    },
    "detectDuplicateDependencies": {
      "throwOnError": true
    },
    "typescriptValidation": true,
    "bundle": {
      "targets": [
        "macos"
      ],
      "entryPath": "index.js"
    },
    "capabilities": [
      "core",
      "core-macos",
      "react",
      "test-app"
    ]
  },
  "depcheck": {
    "ignoreMatches": [
      "react-native-test-app",
      "react-native-svg"
    ]
  }
}
