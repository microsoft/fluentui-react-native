{
  "extends": "@fluentui-react-native/scripts/configs/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "include": ["src"]
}
