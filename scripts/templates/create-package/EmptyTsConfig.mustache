{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": ["es5", "dom"],
    "types": ["jest", "webpack-env"],
    "paths": {
      "{{{packageNpmName}}}/lib/*": ["./src/*"],
      "{{{packageNpmName}}}": ["./src"]
    }
  },
  "include": ["src"]
}
